<Page x:Class="LION.EditWorkersForWorkDay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LION"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditWorkersForWorkDay">

    <Grid x:Name="grid" Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="GhostWhite"  BorderThickness="2">
            <ScrollViewer x:Name="sq" Grid.Row="0">
                <WrapPanel x:Name="wrap"></WrapPanel>
            </ScrollViewer>
        </Border>
        <Grid Grid.Row="1" Background="Gray">

            <Label x:Name="time" Content="Label" FontSize="48" HorizontalAlignment="Left" Margin="28,49,0,0" VerticalAlignment="Top" Width="772" Height="86"/>
            <Button Content="На смену" FontSize="24" HorizontalAlignment="Right" Width="200" Height="50" VerticalAlignment="Center" Click="Button_Click"  Margin="0,61,60,0"/>

        </Grid>
    </Grid>
</Page>
